{
  "name": "ktpm-ecommerce",
  "version": "1.0.0",
  "scripts": {
    "prepare": "husky install",
    "dev": "concurrently \"yarn dev:backend\" \"yarn dev:frontend\"",
    "dev:backend": "cd BackEnd && yarn dev",
    "dev:frontend": "cd FrontEnd && yarn dev",
    "start": "cd BackEnd && yarn start",
    "test": "concurrently \"yarn test:backend\" \"yarn test:frontend\"",
    "test:backend": "cd BackEnd && yarn test",
    "test:frontend": "cd FrontEnd && yarn test",
    "test:ci": "yarn test:ci:backend && yarn test:ci:frontend",
    "test:ci:backend": "cd BackEnd && yarn test --silent --runInBand",
    "test:ci:frontend": "cd FrontEnd && yarn test --silent --run",
    "test:coverage": "concurrently \"yarn test:coverage:backend\" \"yarn test:coverage:frontend\"",
    "test:coverage:backend": "cd BackEnd && yarn test:coverage",
    "test:coverage:frontend": "cd FrontEnd && yarn test:coverage",
    "lint": "concurrently \"yarn lint:backend\" \"yarn lint:frontend\"",
    "lint:backend": "cd BackEnd && yarn lint",
    "lint:frontend": "cd FrontEnd && yarn lint",
    "lint:fix": "concurrently \"yarn lint:fix:backend\" \"yarn lint:fix:frontend\"",
    "lint:fix:backend": "cd BackEnd && yarn lint:fix",
    "lint:fix:frontend": "cd FrontEnd && yarn lint:fix",
    "docker:dev": "docker-compose up --build",
    "docker:test": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.9.0",
    "react-redux": "^9.2.0",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0"
  }
}
